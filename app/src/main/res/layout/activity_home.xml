<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <TextView
        android:id="@+id/txt_main"
        android:layout_width="254dp"
        android:layout_height="93dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="어떤 제품을              고르시겠습니까?"
        android:textAlignment="center"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbtn_monitor"
        android:layout_width="167dp"
        android:layout_height="134dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_desktop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_main"
        app:srcCompat="@drawable/monitor" />

    <ImageButton
        android:id="@+id/imgbtn_desktop"
        android:layout_width="145dp"
        android:layout_height="129dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_monitor"
        app:layout_constraintTop_toBottomOf="@+id/txt_main"
        app:srcCompat="@drawable/desktop"
        android:layout_marginRight="16dp" />

    <ImageButton
        android:id="@+id/imgbtn_keyboard"
        android:layout_width="164dp"
        android:layout_height="157dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn_mouse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_monitor"
        app:srcCompat="@drawable/keyboard"
        android:layout_marginRight="28dp"
        android:layout_marginLeft="16dp" />

    <ImageButton
        android:id="@+id/imgbtn_mouse"
        android:layout_width="0dp"
        android:layout_height="146dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgbtn_keyboard"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_desktop"
        app:srcCompat="@drawable/mouse"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="26dp" />
</android.support.constraint.ConstraintLayout>